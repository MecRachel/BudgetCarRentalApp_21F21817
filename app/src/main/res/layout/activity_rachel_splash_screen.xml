<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9933"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RachelSplashScreen">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="202dp"
        android:layout_height="199dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/budegtlogo"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/BudgetS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/diplomata"
        android:text="Budget Car Rental"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/below"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Budget Car Rental Mobile Application"
        android:fontFamily="@font/snippet"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>